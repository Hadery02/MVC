@model BTL.Models.HoaDon

@{
    ViewData["Title"] = "Create";
}
<h1>Hóa Đơn Mới</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaKhachHang" class="control-label"></label>
                <select asp-for="MaKhachHang" class ="form-control" asp-items="ViewBag.MaKhachHang"></select>
            </div>
            <div class="form-group">
                <label asp-for="ThanhTien" class="control-label">Thành Tiền</label>
                <input asp-for="ThanhTien" class="form-control" />
                <span asp-validation-for="ThanhTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayThanhToan" class="control-label">Ngày Thanh Toán</label>
                <input type="date" asp-for="NgayThanhToan" class="form-control" />
                <span asp-validation-for="NgayThanhToan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNhanVien" class="control-label"></label>
                <select asp-for="MaNhanVien" class ="form-control" asp-items="ViewBag.MaNhanVien"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: rgb(255, 106, 0);" >Quay Lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
input[type=submit] {
  width: 100%;
  background-color: rgb(67, 19, 225) 87, 175);
  color: white;
  padding: 10px 15px;
  margin: 15px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type=submit]:hover {
  background-color: #e65912;

}

div {
    padding-left :50px;
}
body{
    background-color: rgb(174, 226, 235);

}
</style>