@model BTL.Models.HoaDon

@{
    ViewData["Title"] = "Edit";
}
<div class="thongtin">
<h1>Sửa Thông Tin Hóa Đơn</h1>
<hr />
<div class="row">
    <div class="edit" style="background-color:rgb(65, 206, 216);">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHoaDon" />
            <div class="form-group">
                <label asp-for="MaKhachHang" class="control-label"></label>
                <select asp-for="MaKhachHang" class="form-control" asp-items="ViewBag.MaKhachHang"></select>
                <span asp-validation-for="MaKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaPhong" class="control-label">Mã Phòng</label>
                <select asp-for="MaPhong" class="form-control" asp-items="ViewBag.MaPhong"></select>
                <span asp-validation-for="MaPhong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThanhTien" class="control-label">Thành Tiền</label>
                <input asp-for="ThanhTien" class="form-control" />
                <span asp-validation-for="ThanhTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayThanhToan" class="control-label">Ngày Thanh Toán</label>
                <input asp-for="NgayThanhToan" class="form-control" />
                <span asp-validation-for="NgayThanhToan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: rgb(255, 0, 4);">Quay Lại</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
input[type=submit] {
  width: 100%;
  background-color: #67b91a;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type=submit]:hover {
  background-color: #4571a0;

}

div.thongtin {
  width: 50%;
  padding-left:20px;
  
}
div.edit{
    width:80%;
    padding:10px;
}
body{
    background-color: rgba(170, 200, 200, 0.726);
}

</style>