    ViewData["Title"] = "Details";
}

<h1>Chi tiết</h1>

<hr>
<div >
   <table>
        <th>Mã Khách hàng</th>
        <td class = "col-sm-10"> @Html.DisplayFor(model => model.MaKhachHang)</td>
    </tr>
